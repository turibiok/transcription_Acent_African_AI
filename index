    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const problemData = {
                labels: ['Whisper-small (Base)', 'Dragon Medical One'],
                datasets: [{
                    label: 'Taux d\'Erreur sur les Mots (WER)',
                    data: [42.8, 35.2],
                    backgroundColor: ['#ee9b00', '#ca6702'],
                    borderColor: ['#ee9b00', '#ca6702'],
                    borderWidth: 1
                }]
            };
            const problemConfig = {
                type: 'bar',
                data: problemData,
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    indexAxis: 'y',
                    scales: {
                        x: {
                            beginAtZero: true,
                            title: {
                                display: true,
                                text: 'Taux d\'Erreur (WER %) - Plus c\'est bas, mieux c\'est'
                            }
                        }
                    },
                    plugins: {
                        title: {
                            display: true,
                            text: 'Performance des Modèles Standards sur les Accents Ouest-Africains',
                            font: { size: 16 }
                        },
                        legend: { display: false }
                    }
                }
            };
            new Chart(document.getElementById('problemChart'), problemConfig);

            const resultsData = {
                labels: ['Whisper-small (Base)', 'Dragon Medical One', 'Notre Modèle (Fine-tuné)'],
                datasets: [{
                    label: 'Taux d\'Erreur sur les Mots (WER)',
                    data: [42.8, 35.2, 11.5],
                    backgroundColor: ['#ee9b00', '#ca6702', '#0a9396'],
                    borderColor: ['#ee9b00', '#ca6702', '#0a9396'],
                    borderWidth: 1
                }]
            };
            const resultsConfig = {
                type: 'bar',
                data: resultsData,
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    scales: {
                        y: {
                            beginAtZero: true,
                            title: {
                                display: true,
                                text: 'Taux d\'Erreur (WER %) - Plus c\'est bas, mieux c\'est'
                            }
                        }
                    },
                    plugins: {
                        title: {
                            display: true,
                            text: 'Comparaison des Performances : Avant et Après Fine-Tuning',
                            font: { size: 16 }
                        },
                        legend: { display: false }
                    }
                }
            };
            new Chart(document.getElementById('resultsChart'), resultsConfig);

            const examples = [
                {
                    ref: "The patient presents with a fever of thirty-eight degrees.",
                    base: "The patient presents with a fever of dirty heat degrees.",
                    tuned: "The patient presents with a fever of thirty-eight degrees."
                },
                {
                    ref: "We need to check his cholesterol levels.",
                    base: "We need to check his colors true levels.",
                    tuned: "We need to check his cholesterol levels."
                },
                {
                    ref: "Administer one dose of paracetamol.",
                    base: "Administer one dose of parasites mall.",
                    tuned: "Administer one dose of paracetamol."
                }
            ];

            const refText = document.getElementById('ref-text');
            const baseText = document.getElementById('base-text');
            const tunedText = document.getElementById('tuned-text');
            const exampleButtonsContainer = document.getElementById('example-buttons');
            const exampleButtons = exampleButtonsContainer.querySelectorAll('button');

            function updateExample(index) {
                const example = examples[index];
                refText.textContent = example.ref;
                baseText.textContent = example.base;
                tunedText.textContent = example.tuned;
                
                exampleButtons.forEach((btn, i) => {
                    if (i == index) {
                        btn.classList.remove('bg-gray-200', 'text-gray-800', 'hover:bg-gray-300');
                        btn.classList.add('bg-[#005f73]', 'text-white', 'hover:bg-[#0a9396]');
                    } else {
                        btn.classList.add('bg-gray-200', 'text-gray-800', 'hover:bg-gray-300');
                        btn.classList.remove('bg-[#005f73]', 'text-white', 'hover:bg-[#0a9396]');
                    }
                });
            }

            exampleButtonsContainer.addEventListener('click', (e) => {
                if (e.target.tagName === 'BUTTON') {
                    const index = e.target.getAttribute('data-example');
                    if (index) {
                        updateExample(parseInt(index));
                    }
                }
            });

            updateExample(0);
        });
    </script>
